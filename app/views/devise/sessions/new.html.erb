<h2>用户登录</h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :wrapper => :inline) do |f| %>
  <%= f.input :email, :required => false, :autofocus => true %>
  <%= f.input :password, :required => false %>
  <% if devise_mapping.rememberable? %>
    <%= f.input :remember_me, :label => false do %>
      <ul class="inputs-list">
        <li><%= check_box_tag :remember_me, 1, false %><li>
        <span>记住我</span>
      </ul>
    <% end %>
  <% end %>

  <div class="actions">
    <%= f.submit "登录", :class => "btn success" %>
  </div>
<% end %>

<% content_for :sidebar do %>
  <%= render :partial => "devise/shared/links" %>
<% end %>