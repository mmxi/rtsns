.topbar-wrapper
  .topbar
    .topbar-inner
      .container
        %h3= link_to "RTSNS", root_path
        %ul.nav.secondary-nav
          - if user_signed_in?
            %li= image_tag current_user.avatar_url(:s32), :style => "margin-top:3px;"
            %li.dropdown
              = link_to current_user.name, "#", :class => "dropdown-toggle"
              %ul.dropdown-menu
                %li= link_to "帐号设置", edit_user_registration_path
                - if current_user.admin?
                  %li= link_to "后台控制板", admin_root_path
                %li= link_to "退出", destroy_user_session_path, :method => :delete
          - else
            %li= link_to "注册", new_user_registration_path
            %li= link_to "登录", new_user_session_path